    public final method at: key ifAbsent: ifAbsentBlock := {
        self ensureStorage.

        let entryIndex := (self scanFor: key) asSize.
        let entry := storage at: entryIndex * 2sz.
        entry == __hashtableEmptyElement__ ifTrue: {
            ifAbsentBlock()
        } ifFalse: {
            storage at: entryIndex *2sz + 1sz
        }
    }.

